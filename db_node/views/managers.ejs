<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>
        <%= pageTitle %>
    </title>
</head>

<body>
    <div id="editModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit</h4>
                </div>
                <div class="modal-body">
                    <form id="modal-form">
                        <div style="text-align: center;">
                            <input type="text" name="id" id="manager_id" readonly></br>
                            <input type="text" name="name" id="manager_name"></br>
                            <input type="text" name="surname" id="manager_surname"></br>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" form="modal-form" class="btn btn-success">Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    <%- include("includes/navigate.ejs") %>
        <% if (manager.length == 0) { %>
            <h1>No managers found!</h1>
            <% } else { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% manager.forEach((pro, _)=> { %>
                            <tr>
                                <td>
                                    <%= pro.manager_id %>
                                </td>
                                <td>
                                    <%= pro.manager_name %>
                                </td>
                                <td>
                                    <%= pro.manager_surname %>
                                </td>
                                <td>
                                    <button type="button" onclick="setModalFields(this)" data-toggle="modal"
                                        data-id="<%= pro.manager_id %>" data-name="<%= pro.manager_name %>"
                                        data-surname="<%= pro.manager_surname %>" data-target="#editModal">
                                        Edit
                                    </button>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

                <% } %>
                    <script>
                        function setModalFields(row) {
                            document.getElementById("manager_id").value = row.dataset.id;
                            document.getElementById("manager_name").value = row.dataset.name;
                            document.getElementById("manager_surname").value = row.dataset.surname;
                            document.getElementById("modal-form").action = "/managers/update/" + row.dataset.id;
                            document.getElementById("modal-form").method = "POST";
                        }
                    </script>

</body>

</html>